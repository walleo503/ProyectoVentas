@{
    ViewData["Title"] = "Menu";
}
<style>
    body {
        background-color: #f8f8f8;
        font-family: 'Arial', sans-serif;
        margin: 0;
    }

    .menu-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .menu-title {
        color: #e3002a;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .category-title {
        color: #e3002a;
        font-size: 24px;
        text-align: center;
        margin: 20px 0;
    }

   
    .opciones-container {
        background: white;
        border-radius: 10px;
        padding: 20px;
        margin: 0 0 30px 0; 
        width: 100%; 
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        box-sizing: border-box;
    }

    .opciones-titulo {
        color: #666;
        font-size: 18px;
        margin-bottom: 15px;
        text-align: center;
    }

    .opciones-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
    }

    .opcion-item {
        background: #f5f5f5;
        padding: 10px 15px;
        border-radius: 5px;
        text-align: center;
        font-size: 14px;
        min-width: 80px;
    }

    /* Estilo para el contenedor de hamburguesas */
    .hamburguesas-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .hamburguesa-item {
        width: 280px;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .hamburguesa-image {
        height: 160px;
        background-color: #eee;
        background-size: cover;
        background-position: center;
    }

    .hamburguesa-content {
        padding: 15px;
    }

    .hamburguesa-name {
        color: #333;
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 8px;
        text-align: center;
    }

    .hamburguesa-description {
        color: #666;
        font-size: 14px;
        margin-bottom: 12px;
        line-height: 1.4;
    }

    .hamburguesa-options {
        color: #e3002a;
        font-size: 13px;
        font-style: italic;
    }
</style>

<div class="menu-header">
    <h1 class="menu-title">Menú por categoría</h1>
</div>

<h2 class="category-title">HAMBURGUESAS</h2>

<!-- Sección de Otras opciones -->
<div class="opciones-container">
    <div class="opciones-titulo">Otras opciones</div>
    <div class="opciones-grid">
        <div class="opcion-item">Pizza</div>
        <div class="opcion-item">Hot dog</div>
        <div class="opcion-item">Pollo</div>
        <div class="opcion-item">Postres</div>
        <div class="opcion-item">Bebidas</div>
        <div class="opcion-item">Tacos</div>
        <div class="opcion-item">Burritos</div>
        <div class="opcion-item">Combos</div>
        <div class="opcion-item">Promociones</div>
    </div>
</div>

<!-- Sección de Hamburguesas -->
<div class="hamburguesas-container">
  
    <div class="hamburguesa-item">
        <div class="hamburguesa-image" style="background-image: url('https://via.placeholder.com/280x160?text=Dulce+Sabor');"></div>
        <div class="hamburguesa-content">
            <h3 class="hamburguesa-name">Dulce Sabor</h3>
            <p class="hamburguesa-description">Una explosión de sabores dulces y salados</p>
            <p class="hamburguesa-options">- Otras opciones</p>
        </div>
    </div>

    <!-- Clasico -->
    <div class="hamburguesa-item">
        <div class="hamburguesa-image" style="background-image: url('https://via.placeholder.com/280x160?text=Clasico+America');"></div>
        <div class="hamburguesa-content">
            <h3 class="hamburguesa-name">Clasico América</h3>
            <p class="hamburguesa-description">Carne de res, queso cheddar, lechuga, tomate y mayonesa en pan brioche</p>
            <p class="hamburguesa-options">- Nos decides...<br>- Nos pedras...</p>
        </div>
    </div>

    <!-- BBQ -->
    <div class="hamburguesa-item">
        <div class="hamburguesa-image" style="background-image: url('https://via.placeholder.com/280x160?text=BBQ+Supreme');"></div>
        <div class="hamburguesa-content">
            <h3 class="hamburguesa-name">BBQ Supreme</h3>
            <p class="hamburguesa-description">Carne de res o pollo, cebolla caramelizada, queso derretido y salsa BBQ ahumada</p>
            <p class="hamburguesa-options">- Nos detalles...<br>- Nos pedras...</p>
        </div>
    </div>

    <!-- Tor-Mec  -->
    <div class="hamburguesa-item">
        <div class="hamburguesa-image" style="background-image: url('https://via.placeholder.com/280x160?text=Tor-Mec+Crucial');"></div>
        <div class="hamburguesa-content">
            <h3 class="hamburguesa-name">Tor-Mec Crucial</h3>
            <p class="hamburguesa-description">Carne de res, la especial, queso pepper jack, guacamole y tiras crujientes</p>
            <p class="hamburguesa-options">- Nos detalles...<br>- Nos pedras...</p>
        </div>
    </div>

    <!-- Doble Queso  -->
    <div class="hamburguesa-item">
        <div class="hamburguesa-image" style="background-image: url('https://via.placeholder.com/280x160?text=Doble+Queso');"></div>
        <div class="hamburguesa-content">
            <h3 class="hamburguesa-name">Doble Queso Explosión</h3>
            <p class="hamburguesa-description">Doble carne de res, doble queso cheddar, tomate y salsa especial</p>
            <p class="hamburguesa-options">- Nos detalles...</p>
        </div>
    </div>

    <!-- Smoky  -->
    <div class="hamburguesa-item">
        <div class="hamburguesa-image" style="background-image: url('https://via.placeholder.com/280x160?text=Smoky+Truffle');"></div>
        <div class="hamburguesa-content">
            <h3 class="hamburguesa-name">Smoky Truffle</h3>
            <p class="hamburguesa-description">Carne Angus, queso gruyere, champiñones salteados y mayonesa de trufa</p>
            <p class="hamburguesa-options">- Nos detalles...</p>
        </div>
    </div>
</div>