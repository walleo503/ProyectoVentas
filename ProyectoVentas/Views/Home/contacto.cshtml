@{
    ViewData["Title"] = "Contacto";
}

<style>
    /* Estilos generales */
    .contacto-body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
        color: #333;
    }

    .contacto-container {
        max-width: 600px;
        margin: 30px auto;
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .contacto-h1 {
        color: #d32f2f;
        text-align: center;
        margin-bottom: 20px;
    }

    .contacto-descripcion {
        text-align: center;
        line-height: 1.6;
        color: #555;
    }

    .contacto-datos p {
        margin: 12px 0;
        display: flex;
        align-items: center;
    }

    .contacto-icon {
        margin-right: 10px;
        font-size: 1.2em;
    }

    .contacto-hr {
        border: 0;
        height: 1px;
        background: #e0e0e0;
        margin: 25px 0;
    }

    /* Formulario */
    .contacto-form h2 {
        color: #d32f2f;
        margin-bottom: 20px;
        font-size: 1.5em;
    }

    .contacto-form-group {
        margin-bottom: 20px;
    }

        .contacto-form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .contacto-form-group input,
        .contacto-form-group textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
            transition: border 0.3s;
        }

            .contacto-form-group input:focus,
            .contacto-form-group textarea:focus {
                border-color: #d32f2f;
                outline: none;
            }

    .contacto-textarea {
        resize: vertical;
        min-height: 100px;
    }

    .contacto-btn-enviar {
        background-color: #d32f2f;
        color: white;
        border: none;
        padding: 12px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        transition: background 0.3s;
    }

        .contacto-btn-enviar:hover {
            background-color: #b71c1c;
        }
</style>

<div class="contacto-container">
    <h1 class="contacto-h1">Contacto</h1>
    <p class="contacto-descripcion">
        Bienvenido a <strong>Restaurante Delizia</strong>.<br>
        <span class="contacto-icon">📍</span> Dirección: Calle Principal 123, Ciudad.<br>
        <span class="contacto-icon">🕒</span> Horario: Lunes a Domingo, 12:00 - 22:00.
    </p>

    <div class="contacto-datos">
        <p><span class="contacto-icon">📞</span> <strong>Teléfono:</strong> +123 456 7890</p>
        <p><span class="contacto-icon">✉️</span> <strong>Correo:</strong> contacto@delizia.com</p>
    </div>

    <hr class="contacto-hr">

    <div class="contacto-form">
        <h2>Enviar Mensaje</h2>
        <form id="formContacto">
            <div class="contacto-form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" id="nombre" name="nombre" required placeholder="Tu nombre">
            </div>
            <div class="contacto-form-group">
                <label for="correo">Correo:</label>
                <input type="email" id="correo" name="correo" required placeholder="ejemplo@correo.com">
            </div>
            <div class="contacto-form-group">
                <label for="mensaje">Mensaje:</label>
                <textarea id="mensaje" name="mensaje" class="contacto-textarea" required placeholder="Escribe tu mensaje aquí..."></textarea>
            </div>
            <button type="submit" class="contacto-btn-enviar">Enviar Mensaje</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Opcional: Validación básica del formulario
        document.getElementById('formContacto').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Mensaje enviado (simulado). En una implementación real, esto se conectaría al backend.');
            this.reset();
        });
    </script>
}
