@model IEnumerable<ProyectoVentas.Models.OrdenViewModel>

@{
    ViewData["Title"] = "Historial de Pedidos";
}

<style>
    .textos {
        color: #e74c3c;
        font-size: large;
    }

    .textoFila {
        font-size: medium;
        margin: auto;
    }

    .titulo {
        margin-bottom: 12px;
        color: #e74c3c;
    }

    .underline {
        display: inline-block;
        border-bottom: 2px solid #e74c3c;
        padding-bottom: 5px;
    }

    .btn-detalles {
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        background-color: #e74c3c;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }
    .btn-detalles:hover{
        color:lightgray
    }

        .btn-detalles i {
            margin-right: 8px;
        }

        .btn-detalles:hover {
            background-color: #c0392b;
        }

    .table td, .table th {
        vertical-align: middle;
    }

    
    .list-items {
        margin: 0;
        padding: 0;
    }

        .list-items span {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
        }

        .list-items i {
            margin-right: 8px;
            vertical-align: middle;
        }
</style>

<div class="container mt-4 content-container">
    <div class="underline">
        <h1 class="titulo">@ViewData["Title"]</h1>
    </div>

    <div class="table-container mt-3">
        <table class="table">
            <thead>
                <tr class="textos">
                    <th scope="col">Num. Recibo</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Fecha de Pedido</th>
                    <th scope="col">Items</th>
                    <th scope="col">Total</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="textoFila">
                @foreach (var orden in Model)
                {
                    <tr>
                        <td>@orden.NumRecibo</td>
                        <td>
                            @if (orden.Estado == "Cancelado")
                            {
                                <span class="text-danger">@orden.Estado</span>
                            }
                            else
                            {
                                <span class="text-success">@orden.Estado</span>
                            }
                        </td>
                        <td>@orden.FechaPedido.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="list-items">
                                @foreach (var item in orden.Items)
                                {
                                    <span>
                                        <i class="fas fa-utensils"></i>
                                        @item.Nombre X @item.Cantidad
                                    </span>
                                }
                            </div>
                        </td>
                        <td>@(orden.Total.ToString() ?? "N/A")</td> <!-- Formato de total -->
                        <td class="text-center">
                            <a href="@Url.Action("Details", "Orden", new { id = orden.IdPedido })" class="btn-detalles">
                                <i class="fas fa-eye"></i> Ver Detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
